<%- include("partials/header") -%>
<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle" class="composeP">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle">
        <label for="postContent" class="composeP">Post</label>
        <textarea class="form-control" name="postContent" id="postContent" rows="4"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

